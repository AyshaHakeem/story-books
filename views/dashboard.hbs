<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>

{{#if stories}}
<p>Here are your stories</p>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td> {{!-- because we're in the stories loop, need not specify as stories[i].title --}}
            <td>{{createdAt}}</td>
            <td>{{status}}</td>
            <td></td>     {{!-- to delete/edit story --}}
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have no stories</p>
{{/if}}

